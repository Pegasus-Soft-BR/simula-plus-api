{
  "_comentario": "Este appsettings é seguro para commit. Os campos sensíveis estão vazios. Obtenha o appsettings.Development.json com o time.",

  "DatabaseProvider": "SQLite", // Postgres, SqlServer ou SQLite
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    }
  },
  "PegasusApiSettings": {
    "BaseUrl": "https://account.pegasus-soft.com.br",
    "IsActive": true
  },
  "ServerSettings": {
    "DefaultUrl": "https://mock-exams.pegasus-soft.com.br",
    "AppSlug": "mock-exams"
  },
  "ConnectionStrings": {
    "DefaultConnection": "",
    "PostgresConnection": "",
    "SqliteConnection": "DataSource=file::memory:?cache=shared"
  },
  "TokenConfigurations": {
    "Audience": "pegasus-apps",
    "Issuer": "pegasus-admin",
    "Seconds": 86400, // 24 horas
    "SecretJwtKey": ""
  },
  "IASettings": {
    "IsActive": false,
    "ApiKey": ""
  }
}
